generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Manga {
  id  String  @id
  imageTop  String
  class String @db.VarChar(255)
  back  String @db.VarChar(255)
  imageShows   ImageShow[] 
  titre   String @db.VarChar(255)
  imageCarousels   ImageCarousel[]
}

model ImageShow {
  img   String  @id
  url   String  @relation(fields: [img] )
}

model ImageCarousel {
  name  String  @id
  image String  @relation(fields: [url] references: [name])
  url   String
}




